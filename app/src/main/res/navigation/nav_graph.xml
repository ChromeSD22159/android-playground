<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/contactsFragment">

    <fragment
        android:id="@+id/articleDetailFragment"
        android:name="syntax.com.playground.ui.article.ArticleDetailFragment"
        android:label="fragment_article_detail"
        tools:layout="@layout/fragment_article_detail" >
        <argument
            android:name="IMAGEREF"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="POSITION"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="DESCRIPTION"
            app:argType="string"
            android:defaultValue='""' />
        <action
            android:id="@+id/action_articleDetailFragment_to_shipListFragment"
            app:destination="@id/shipListFragment" />
        <action
            android:id="@+id/action_articleDetailFragment_to_canListFragment"
            app:destination="@id/canListFragment" />
    </fragment>
    <fragment
        android:id="@+id/canListFragment"
        android:name="syntax.com.playground.ui.article.CanListFragment"
        android:label="CanFragment" >
        <action
            android:id="@+id/action_canListFragment_to_articleDetailFragment"
            app:destination="@id/articleDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/shipListFragment"
        android:name="syntax.com.playground.ui.article.ShipListFragment"
        android:label="ShipListFragment" >
        <action
            android:id="@+id/action_shipListFragment_to_articleDetailFragment"
            app:destination="@id/articleDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/loremFragment"
        android:name="syntax.com.playground.ui.chapter.ChapterFragment"
        android:label="fragment_counter"
        tools:layout="@layout/fragment_chapter" />
    <fragment
        android:id="@+id/contactsFragment"
        android:name="syntax.com.playground.ui.contact.ContactsFragment"
        android:label="ContactsFragment" />
    <fragment
        android:id="@+id/contactDetailFragment"
        android:name="syntax.com.playground.ui.contact.ContactDetailFragment"
        android:label="ContactDetailFragment" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="syntax.com.playground.ui.mvvm.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
</navigation>